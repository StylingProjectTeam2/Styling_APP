    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalkboard"
    tools:context=".ManualActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/cfmarieeve"
        android:text="Smart Mirror Manual"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:layout_height="530dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_style3"
        android:fontFamily="@font/neucharegular"
        android:padding="30dp"
        android:text="\n1. Smart Mirror can be operated through this application.\n\n 2. If you select the styling you want, you can see it in the Smart Mirror.\n\n3. If you want to know where to buy clothes in the online shopping mall styling, click the image to go to the sales site. \n\n4. You can take a picture with the smart mirror by pressing the button, and then smart mirror recommends the user's clothes."
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="128dp"
        android:layout_height="111dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:srcCompat="@drawable/person" />

